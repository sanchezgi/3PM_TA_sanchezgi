<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Classes.CharacterDetails">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/CharacterClassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/background"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/star" />

        <TextView
            android:id="@+id/powerWeaponText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:text="TextView"
            android:textColor="@color/star" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:text="Primary Weapons"
        android:textColor="@color/background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerLine1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_primary_weapon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:text="Special Weapons"
        android:textColor="@color/background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerLine3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_special_weapon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:text="Heavy Weapons"
        android:textColor="@color/background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerLine2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_heavy_weapon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/Helmets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingBottom="5dp"
        android:text="Helmets"
        android:textColor="@color/background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/dividerLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white">

    </View>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_helmets"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
</androidx.core.widget.NestedScrollView>